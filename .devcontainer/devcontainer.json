{
    "name": "Go Development Container",
    "image": "mcr.microsoft.com/devcontainers/go:latest",
    "customizations": {
        "vscode": {
            "settings": {
                "go.gopath": "/go",
                "go.toolsGopath": "/go"
            },
            "extensions": [
                "golang.go"
            ]
        }
    },
    "postCreateCommand": "just --version",
    "features": {
        "ghcr.io/devcontainers/features/common-utils:1": {},
        "ghcr.io/guiyomh/features/just:0": {}
    },
    "ports": [
        "8080:8080"
    ],
    "forwardPorts": [
        8080
    ]
}
